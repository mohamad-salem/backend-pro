# .env.production - إعدادات الإنتاج

# --- Server Configuration ---
PORT=3000
NODE_ENV=production

# --- Company Information ---
COMPANY_EMAIL=info@prootech-agency.com
COMPANY_NAME=Prootech Agency
COMPANY_PHONE=+963 986 777 154

# --- SMTP Configuration ---
# إذا كنت تستخدم Gmail:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# إذا كنت تستخدم مزود آخر، غير الإعدادات حسب المطلوب
# مثال لـ Outlook/Hotmail:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_SECURE=false

# مثال لـ Yahoo:
# SMTP_HOST=smtp.mail.yahoo.com
# SMTP_PORT=587
# SMTP_SECURE=false

# --- CORS Configuration ---
CORS_ORIGIN=*

# --- Debug Mode (اختياري) ---
DEBUG_MODE=false